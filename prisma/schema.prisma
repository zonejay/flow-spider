// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Workflow {
  id          String  @id @default(cuid())
  userId      String
  name        String
  description String?

  definition String
  status     String

  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt

  // 用户不能同时拥有相同名称的工作流

  @@unique([name, userId])
}
